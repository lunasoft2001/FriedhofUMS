<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="idGrab"
            android:id="@+id/textViewIdGrab"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GrabName"
            android:id="@+id/textViewGrabname"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/botones_lista"
            android:layout_height="@dimen/botones_lista"
            android:id="@+id/botonRecoger"
            android:src="@drawable/recoger"
            android:scaleType="fitCenter"
            android:background="@drawable/borde_imagen_accent"
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:layout_width="@dimen/botones_lista"
            android:layout_height="@dimen/botones_lista"
            android:id="@+id/botonTierra"
            android:src="@drawable/tierra"
            android:scaleType="fitCenter"
            android:background="@drawable/borde_imagen_accent"
            android:layout_margin="2dp"
            android:padding="4dp"/>

        <ImageView
            android:layout_width="@dimen/botones_lista"
            android:layout_height="@dimen/botones_lista"
            android:id="@+id/botonPlantar"
            android:src="@drawable/plantar"
            android:scaleType="fitCenter"
            android:background="@drawable/borde_imagen_accent"
            android:layout_margin="2dp"
            android:padding="4dp"/>

        <ImageView
            android:layout_width="@dimen/botones_lista"
            android:layout_height="@dimen/botones_lista"
            android:id="@+id/botonRegar"
            android:src="@drawable/regar"
            android:scaleType="fitCenter"
            android:background="@drawable/borde_imagen_accent"
            android:layout_margin="2dp"
            android:padding="4dp"/>

        <ImageView
            android:layout_width="@dimen/botones_lista"
            android:layout_height="@dimen/botones_lista"
            android:id="@+id/botonLimpiar"
            android:src="@drawable/limpiar"
            android:scaleType="fitCenter"
            android:background="@drawable/borde_imagen_accent"
            android:layout_margin="2dp"
            android:padding="4dp"/>

        <ImageView
            android:layout_width="@dimen/botones_lista"
            android:layout_height="@dimen/botones_lista"
            android:id="@+id/botonDecorar"
            android:src="@drawable/decorar"
            android:scaleType="fitCenter"
            android:background="@drawable/borde_imagen_accent"
            android:layout_margin="2dp"
            android:padding="4dp"/>

        <ImageView
            android:layout_width="@dimen/botones_lista"
            android:layout_height="@dimen/botones_lista"
            android:id="@+id/botonPflege"
            android:src="@drawable/pflege"
            android:scaleType="fitCenter"
            android:background="@drawable/borde_imagen_accent"
            android:layout_margin="2dp"
            android:padding="4dp"/>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Detalle"
        android:id="@+id/textViewDetalle"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:textStyle="italic"
        android:layout_marginLeft="10dp"/>

</LinearLayout>